@{
    ViewData["Title"] = "File Uploader";
}


<div class="container">
    
    <div role="tabpanel">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active nav-item">
                <a href="#home" aria-controls="home" role="tab" data-toggle="tab" class="nav-link"><i class="fas fa-upload"></i>Upload Files</a>
            </li>
            <li role="presentation" class="nav-item">
                <a href="#tab" aria-controls="tab" role="tab" data-toggle="tab" class="nav-link"><i class="fas fa-cog"></i> Manage Loader Files</a>
            </li>
            <li class="nav-item" role="presentation">
                <a href="#fmanager" aria-controls="tab" role="tab" data-toggle="tab" class="nav-link"><i class="fas fa-folder-open"></i>File Manager</a>
            </li>
        </ul>
    
        <!-- Tab panes -->
        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="home">
                <div class="col-sm-6 mt-4">                    
                    <form action="" method="POST" class="form-horizontal" role="form">
                            <div class="form-group">
                                <div class="mb-3 ">
                                    <label for="formFile" class="form-label">Select file for upload</label>
                                    <input class="form-control" type="file" id="formFile">
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="col-sm-10 col-sm-offset-2">
                                    <button type="submit" class="btn btn-primary">Submit</button>
                                </div>
                            </div>
                    </form>
                    
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="tab">
                <div class="panel mt-4">
                    <div class="col-sm-6">
                        <button type="submit" id="loadtemplates"><i class="fa fa-load"></i>Load Control Templates</button>
                        <div>
                            
                        </div>
                    </div>
                    <div class="col-sm-6 well">

                    </div>
                </div>
            </div>
            <div class="tab-pane" id="fmanager" role="tabpanel">
                <div class="panel mt-4">
                    <h3>Manage Files</h3>
                    <div class="card" style="width:18rem">
                            This is a card for the file list.
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
